<!doctype html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <script src="script/tailwind.js"></script>
    <title>Villas 4 U</title>
    <link href="css/style.css" rel="stylesheet" type="text/css">
    <script src="https://kit.fontawesome.com/5d4a18d08e.js" crossorigin="anonymous"></script>
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.8.3/font/bootstrap-icons.css">
    <link rel="preconnect" href="https://fonts.googleapis.com">
    <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin>
    <link href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;300;400;500;600;700;800;900&display=swap" rel="stylesheet">

    <script>
        tailwind.config = {
            theme: {
                extend: {
                    colors: {
                        clifford: '#da373d',
                    }
                }
            }
        }
    </script>
    <style type="text/tailwindcss">
        @layer utilities {
            .h-full{
                height: 800px;
            }

            .h-half{
                height: 1400px;
            }

            .h-small{
                height: 3000px;
            }

            .grid-rows-7{
                grid-template-rows: repeat(7, minmax(0, 1fr));
            }

            .grid-rows-8{
                grid-template-rows: repeat(8, minmax(0, 1fr));
            }

            .grid-rows-9{
                grid-template-rows: repeat(9, minmax(0, 1fr));
            }

            .grid-rows-10{
                grid-template-rows: repeat(10, minmax(0, 1fr));
            }

            .card-3-house{
                background-image: url("img/huis-3/1.jpg");
                background-size: cover;
            }

            .card-6-house{
                background-image: url("img/huis6.jpg");
                background-size: cover;
            }

            .left-10p{
                left: 10%;
            }

            .left-40p{
                left: 40%;
            }

            .w-80p{
                width: 80%;
            }

            .ml-70p{
                margin-left: 34%;
            }
        }
    </style>
    <script src="script/huis1.js" defer></script>
</head>
<body>
<header class="h-28 w-full bg-top bg-center grid grid-cols-1 grid-rows-2 lg:grid-cols-4 lg:grid-rows-1">
    <div class="flex flex-col justify-center items-center col-span-1">
        <img src="img/logo.svg" alt="" class="h-16">
    </div>
    <div class="hidden lg:block"></div>
    <div class="hidden lg:block"></div>
    <div class="flex flex-row justify-center items-center">
        <a href="" class="text-white text-2xl hover:text-slate-300 mx-8">Home</a>
        <a href="" class="text-white text-2xl hover:text-slate-300 mx-8">Contact</a>
    </div>
</header>
<main class="grid grid-cols-2 grid-rows-1 min-h-full w-80p mx-auto mt-5" style="min-height: 80vh">
    <div class="grid grid-rows-2 grid-cols-1">
            <div id="huis1 " class="items-center w-10/12 h-5/6 rounded-3xl flex center-items bg-cover" style="background-image: url('img/huis-1/1.jpg')">
                <i class="bi bi-arrow-left bg-white p-2 rounded-lg -ml-2 shadow-xl"></i>
            </div>

    <div class=""></div>
    </div>
</main>
</body>

</html>